<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#002b2a"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="np.com.sushantpaudel.testapp.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel Destinations"
            android:textColor="@color/textColorHome"
            android:textSize="@dimen/home_page_texts"
            android:id="@+id/DropDownTravelDestinations"
            android:fontFamily="sans-serif-smallcaps"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:nestedScrollingEnabled="false"
            android:id="@+id/recycler_view_travel_destinations"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cultural Heritages"
            android:textColor="@color/textColorHome"
            android:textSize="@dimen/home_page_texts"
            android:id="@+id/DropDownCulturalHeritage"
            android:fontFamily="sans-serif-smallcaps"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            android:visibility="visible"
            android:id="@+id/recycler_view_cultural_heritage"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
